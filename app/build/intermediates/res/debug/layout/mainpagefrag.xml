<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<FrameLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    >
  <ImageView 
   android:id="@+id/test_image"
   android:src="@drawable/koala"
   android:contentDescription="@string/menu_display_image"
   android:layout_width="fill_parent"
   android:layout_height="300dp">
   </ImageView>  
   <View
       android:layout_width="fill_parent"
       android:layout_height="60dp"
       android:layout_gravity="top" 
       android:background="#AA000000"
       ></View>
<TextView
        android:id="@+id/title"
        android:text="@string/text_hoes_here_lol"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"

        android:layout_gravity="top|right" 
        android:textSize="30dp"
        android:textColor="@android:color/white"
       />

</FrameLayout>


<TextView
        android:id="@+id/description"
        android:text=" Welcome to Indian Restaurant, From a luscious slice of the Cheesecake Factoryâ€™s Godiva chocolate cheesecake to a meal of Rainbow and Negihama rolls from Hapa Sushi or our very own Barbeque Chicken Pizza for a crowd, we have it all.\nPlease Take your time to peruse this Digital Menu. Choose an Iten from the left sidebar and add to to your order by pressing the blue button."
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20dp"
		android:layout_gravity="center" 
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/fragment_button_add_order"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:textSize="18dp"
            android:text="@string/add_order"
            android:background="@drawable/butt_purple"
            android:shadowRadius="10"
            android:shadowColor="@android:color/white"
            android:shadowDx="1"
            android:shadowDy="1"
            android:layout_weight="50"
            android:padding="5dp"
            />
        <Button
            android:id="@+id/fragment_button_view_order"
            android:padding="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:textSize="18dp"
            android:text="View Order State"
            android:background="@drawable/butt_other"
            android:shadowRadius="10"
            android:shadowColor="@android:color/white"
            android:shadowDx="1"
            android:shadowDy="1"
            android:layout_weight="50"
            />
    </LinearLayout>
</LinearLayout>
</ScrollView>
</LinearLayout><!-- From: file:/E:/RestaurantExpressTeam1/app/src/main/res/layout/mainpagefrag.xml -->